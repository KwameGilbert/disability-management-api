# === APP CONFIG ===
APP_NAME="SmartTax Ghana"
APP_ENV=production
APP_URL=https://taxplatform.gov.gh
APP_DEBUG=false
APP_LOG_LEVEL=error
APP_TIMEZONE=Africa/Accra
APP_LOCALE=en

# === REMOTE DATABASE CONFIG ===
PROD_DB_ADAPTER=mysql
PROD_DB_HOST=127.0.0.1
PROD_DB_PORT=3306
PROD_DB_DATABASE=pwd_management
PROD_DB_USERNAME=smarttax_user
PROD_DB_PASSWORD=SuperSecurePassword123
PROD_DB_SSL=true
PROD_DB_CHARSET=utf8mb4
PROD_DB_COLLATION=utf8mb4_unicode_ci
PROD_DB_DRIVER=mysql

# === LOCAL DATABASE CONFIG ===
LOCAL_DB_ADAPTER=mysql
LOCAL_DB_HOST=127.0.0.1
LOCAL_DB_PORT=3306
LOCAL_DB_DATABASE=smarttax_db
LOCAL_DB_USERNAME=smarttax_user
LOCAL_DB_PASSWORD=SuperSecurePassword123
LOCAL_DB_SSL=false
LOCAL_DB_CHARSET=utf8mb4
LOCAL_DB_COLLATION=utf8mb4_unicode_ci
LOCAL_DB_DRIVER=mysql

# === JWT / AUTH ===
JWT_SECRET=base64:SomeGeneratedSecureSecretKey
JWT_ALGORITHM=HS256
JWT_ISSUER=https://taxplatform.gov.gh
JWT_EXPIRE=3600

# === PAYSTACK CONFIG ===
PAYSTACK_PUBLIC_KEY=pk_live_xxxxxxxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxx
PAYSTACK_CALLBACK_URL=https://taxplatform.gov.gh/api/payment/callback

# === SMS GATEWAY ===
SMS_API_URL=https://api.smsprovider.com/send
SMS_API_KEY=your_sms_gateway_key_here
SMS_SENDER_ID=SmartTaxGH

# === EMAIL CONFIG ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@taxplatform.gov.gh
MAIL_FROM_NAME="SmartTax Ghana"

# === STORAGE / BACKUP ===
STORAGE_DRIVER=local
STORAGE_BACKUP_PATH=/var/www/backups/
MAX_UPLOAD_SIZE_MB=100

# === AUDIT LOGGING ===
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=/var/log/smarttax/audit.log

# === SYNC & NODE CONFIG (for agent sync nodes) ===
NODE_ID=central_node
NODE_SYNC_SECRET=supersecretsharedkey
ALLOW_NODE_PUSH=true
ALLOW_NODE_PULL=true

# === FRONTEND CONFIG ===
FRONTEND_URL=https://app.taxplatform.gov.gh

# === MISC ===
TIMEZONE=Africa/Accra
CURRENCY=GHS
